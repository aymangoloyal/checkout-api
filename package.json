{
    "name": "checkout-api",
    "version": "1.0.0",
    "description": "A simple checkout API with PostgreSQL, TypeScript, and Swagger",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "test": "jest",
        "test:watch": "jest --watchAll",
