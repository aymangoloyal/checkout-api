        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/cors": "^2.8.17",
        "@types/pg": "^8.10.9",
        "@types/uuid": "^9.0.7",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.6",
        "@types/node": "^20.10.5",
        "@types/jest": "^29.5.8",
        "typescript": "^5.3.3",
        "ts-node-dev": "^2.0.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1"
